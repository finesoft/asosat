<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.asosat</groupId>
	<artifactId>asosat</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>asosat</name>
	<url>http://maven.apache.org</url>

	<properties>

		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>

		<xversion.asosat>0.0.1-SNAPSHOT</xversion.asosat>

		<!-- Standard JEE -->
		<xversion.jee>7.0</xversion.jee>
		<xversion.jms>2.0.1</xversion.jms>
		<xversion.cdi-api>2.0</xversion.cdi-api>

		<!-- Testing -->
		<xversion.junit>4.12</xversion.junit>
		<xversion.weld-junit>1.3.0.Final</xversion.weld-junit>
		<xversion.junit.jupiter.version>5.1.1</xversion.junit.jupiter.version>
		<xversion.junit.platform.version>1.1.1</xversion.junit.platform.version>

		<!-- Open source integration -->
		<xversion.commons-lang3>3.8</xversion.commons-lang3>
		<xversion.commons-io>2.6</xversion.commons-io>
		<xversion.commons-beanutils>1.9.3</xversion.commons-beanutils>
		<xversion.commons-collections4>4.2</xversion.commons-collections4>
		<xversion.commons-codec>1.11</xversion.commons-codec>
		<xversion.commons-vfs2>2.2</xversion.commons-vfs2>

		<!-- MicroProfile integration -->
		<xversion.smallrye.config>1.3.1</xversion.smallrye.config>
		<xversion.smallrye-rest-client>1.0.0</xversion.smallrye-rest-client>
		<xversion.smallrye-open-api>1.0.1</xversion.smallrye-open-api>
		<xversion.smallrye-metrics>1.1.0</xversion.smallrye-metrics>
		<xversion.smallrye-opentracing>1.1.0</xversion.smallrye-opentracing>
		<xversion.smallrye-zookeeper-config-source>1.3.1</xversion.smallrye-zookeeper-config-source>
		<xversion.smallrye-fault-tolerance>1.0.2</xversion.smallrye-fault-tolerance>
		<xversion.smallrye.health>1.0.1</xversion.smallrye.health>
		<xversion.smallrye.jwt>1.1.0</xversion.smallrye.jwt>

	</properties>

	<dependencyManagement>

		<dependencies>
			<!-- Open source integration -->
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-lang3</artifactId>
				<version>${xversion.commons-lang3}</version>
			</dependency>
			<dependency>
				<groupId>commons-io</groupId>
				<artifactId>commons-io</artifactId>
				<version>${xversion.commons-io}</version>
			</dependency>
			<dependency>
				<groupId>commons-beanutils</groupId>
				<artifactId>commons-beanutils</artifactId>
				<version>${xversion.commons-beanutils}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-collections4</artifactId>
				<version>${xversion.commons-collections4}</version>
			</dependency>
			<dependency>
				<groupId>commons-codec</groupId>
				<artifactId>commons-codec</artifactId>
				<version>${xversion.commons-codec}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.commons</groupId>
				<artifactId>commons-vfs2</artifactId>
				<version>${xversion.commons-vfs2}</version>
			</dependency>

			<!-- MicroProfile integration -->
			<dependency>
				<groupId>io.smallrye</groupId>
				<artifactId>smallrye-config</artifactId>
				<version>${xversion.smallrye.config}</version>
				<exclusions>
					<exclusion>
						<groupId>javax.enterprise</groupId>
						<artifactId>cdi-api</artifactId>
					</exclusion>
					<exclusion>
						<groupId>javax.annotation</groupId>
						<artifactId>javax.annotation-api</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>io.smallrye</groupId>
				<artifactId>zookeeper-config-source</artifactId>
				<version>${xversion.smallrye-zookeeper-config-source}</version>
			</dependency>
			<dependency>
				<groupId>io.smallrye</groupId>
				<artifactId>smallrye-rest-client</artifactId>
				<version>${xversion.smallrye-rest-client}</version>
			</dependency>
			<dependency>
				<groupId>io.smallrye</groupId>
				<artifactId>smallrye-open-api</artifactId>
				<version>${xversion.smallrye-open-api}</version>
			</dependency>
			<dependency>
				<groupId>io.smallrye</groupId>
				<artifactId>smallrye-metrics</artifactId>
				<version>${xversion.smallrye-metrics}</version>
			</dependency>
			<dependency>
				<groupId>io.smallrye</groupId>
				<artifactId>smallrye-opentracing</artifactId>
				<version>${xversion.smallrye-opentracing}</version>
			</dependency>
			<dependency>
				<groupId>io.smallrye</groupId>
				<artifactId>smallrye-fault-tolerance</artifactId>
				<version>${xversion.smallrye-fault-tolerance}</version>
			</dependency>
			<dependency>
				<groupId>io.smallrye</groupId>
				<artifactId>smallrye-jwt</artifactId>
				<version>${xversion.smallrye.jwt}</version>
			</dependency>
			<dependency>
				<groupId>io.smallrye</groupId>
				<artifactId>smallrye-health</artifactId>
				<version>${xversion.smallrye.health}</version>
			</dependency>
		</dependencies>

	</dependencyManagement>

	<dependencies>

		<!-- Standard JEE -->
		<dependency>
			<groupId>javax.enterprise</groupId>
			<artifactId>cdi-api</artifactId>
			<version>${xversion.cdi-api}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<version>${xversion.jee}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>javax.jms</groupId>
			<artifactId>javax.jms-api</artifactId>
			<version>${xversion.jms}</version>
			<scope>provided</scope>
		</dependency>

		<!-- CDI Testing -->
		<dependency>
			<groupId>org.jboss.weld</groupId>
			<artifactId>weld-junit5</artifactId>
			<version>${xversion.weld-junit}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-engine</artifactId>
			<version>${xversion.junit.jupiter.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.platform</groupId>
			<artifactId>junit-platform-runner</artifactId>
			<version>${xversion.junit.platform.version}</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<description>A series of skills and technology (asosat) for enterprise system development.</description>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<modules>
		<module>asosat-kernel</module>
		<module>asosat-domain</module>
		<module>asosat-interact</module>
		<module>asosat-message</module>
		<module>asosat-indices</module>
		<module>asosat-query</module>
		<module>asosat-thorntail</module>
		<module>asosat-migrate</module>
 
  </modules>
</project>